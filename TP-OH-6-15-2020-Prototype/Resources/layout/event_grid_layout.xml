<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="4dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/eventNameTextViewGrid"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="EventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/offeredByTextViewGrid"
        android:text="Offered By:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/eventDescTextViewGrid"
        android:text="EventDescription"
        android:maxLines="4"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/leadingMessageTextView"
        android:textStyle="italic"
        android:paddingTop="4dp"
        android:text="Click To know more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
